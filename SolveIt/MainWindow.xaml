<Window x:Class="SolveIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolveIt"
        xmlns:userControl="clr-namespace:SolveIt.View.UserControls"
        xmlns:graph="clr-namespace:SolveIt.View.Graph"
        mc:Ignorable="d"
        Title="SolveIt" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--Menu Bar-->
        <userControl:MenuBar Grid.Row="0" />

        <!--Graph / Answer Content-->
        <graph:GraphDisplay Grid.Row="1" x:Name="graphDisplay"/>

        <!--User Input-->
        <userControl:InputPanel Grid.Row="2" x:Name="inputPanel"/>

        <!--Footer Bar-->
        <Rectangle Grid.Row="3" Fill="DarkGray"/>
    </Grid>
</Window>