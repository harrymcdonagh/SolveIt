<UserControl x:Class="SolveIt.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolveIt.View.UserControls"
             mc:Ignorable="d" 
             Height="40" d:DesignWidth="800">
    <Grid Background="#3498db">
        <Menu Background="Transparent" Foreground="White" VerticalAlignment="Center">
            <MenuItem Header="File" FontSize="16" Foreground="White">
                <MenuItem Header="Exit" Foreground="Black"/>
            </MenuItem>
            <MenuItem Header="Edit" FontSize="16" Foreground="White"/>
            <MenuItem Header="Help" FontSize="16" Foreground="White" Click="miHelp_Click"/>
        </Menu>
    </Grid>
</UserControl>