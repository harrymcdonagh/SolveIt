<UserControl x:Class="SolveIt.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolveIt.View.UserControls"
             mc:Ignorable="d" 
             Height="30" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="File" FontSize="18">
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Edit" FontSize="18"/>
            <MenuItem Header="Help" FontSize="18" Click="miHelp_Click"/>
        </Menu>
    </Grid >
</UserControl>
