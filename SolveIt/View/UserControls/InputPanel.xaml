<UserControl x:Class="SolveIt.View.UserControls.InputPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolveIt.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="InputTextBox" Height="25" Margin="0,0,0,5"/>
            <Button Content="Submit" Height="25" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Status:" Margin="0,0,5,0"/>
                <TextBlock Grid.Column="1" x:Name="StatusOutputTextBlock" Text=""/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
