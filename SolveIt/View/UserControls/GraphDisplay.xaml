<UserControl x:Class="SolveIt.View.UserControls.GraphDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolveIt.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border Background="White" CornerRadius="8" Margin="10">
            <Grid>
                <TextBlock x:Name="AnswerText" 
                           Text="Answer will appear here" 
                           FontSize="32"
                           FontWeight="SemiBold"
                           Foreground="#333333"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="20"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
